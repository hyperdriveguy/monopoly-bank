<!DOCTYPE html>
<html lang="en">
    <head>
        {% block head %}
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='css/normalize.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='css/main.css') }}">
        {% block stylesheets %}{% endblock %}
        <title>{% block title %}Placeholder Page{% endblock %} - Monopoly Banking System</title>
        {% endblock %}
    </head>
    <body>
        <nav class="side-bar">
            <a href="/"><img src="{{ url_for('static', filename='icons/home-2-line.svg') }}">Home</a>
            <a href="/accounts"><img src="{{ url_for('static', filename='icons/bank-line.svg') }}">Accounts</a>
            <a href="/transfer"><img src="{{ url_for('static', filename='icons/exchange-line.svg') }}">Transfer</a>
            <a href="/change-cash"><img src="{{ url_for('static', filename='icons/wallet-3-line.svg') }}">Change Cash</a>
            <a href="/properties"><img src="{{ url_for('static', filename='icons/community-line.svg') }}">Properties</a>
            <a href="/investments"><img src="{{ url_for('static', filename='icons/funds-line.svg') }}">Investments</a>
            <a href="/auctions"><img src="{{ url_for('static', filename='icons/shopping-cart-fill.svg') }}">Auctions</a>
            <a href="/help"><img src="{{ url_for('static', filename='icons/question-line.svg') }}">Help</a>
        </nav>
        <main>

        {% block messages %}
        {% with messages = get_flashed_messages() %}
            {% if messages and messages[0] != "" %}
                <ul class="flashes">
                {% for message in messages %}
                    {% if message != "" %}
                        <li>{{ message }}</li>
                    {% endif %}
                {% endfor %}
                </ul>
            {% endif %}
        {% endwith %}
        {% endblock %}

        <h1>Monopoly Bank</h1>

        {% block content %}
        <h2>Placeholder Page</h2>
        <p>Not yet implemented.</p>
        {% endblock %}

        </main>
        <footer>
        {% block footer %}
        {% endblock %}
        </footer>
        <script src="{{ url_for('static', filename='js/set-margin.js') }}"></script>
        {% block scripts %}{% endblock %}
    </body>
</html>
